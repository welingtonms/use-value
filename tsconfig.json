{
	"include": [ "src/**/*" ],
	"exclude": [ "node_modules", "dist", "src/**/*.test.ts" ],
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "dist",
		"outDir": "dist",
		"esModuleInterop": true,
		"lib": [ "es6", "dom", "es2016", "es2017" ],
		"module": "esnext",
		"moduleResolution": "node",
		"rootDir": "src",
		"sourceMap": true
	}
}
